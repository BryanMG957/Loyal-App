<p id="notice"><%= notice %></p>

<div class="white">

<h1>Appointments</h1>

<div class="row" id="appt-header">
  <div class="col-xs-2"><strong>Type</strong></div>
  <div class="col-xs-2"><strong>Start</strong></div>
  <div class="col-xs-2"><strong>Calendar</strong></div>
  <div class="col-xs-2"><strong>Desc</strong></div>
  <div class="col-xs-4"><strong>Options</strong></div>
</div>

<% @appointments.each do |appointment| %>
  <div class="row">
  <% service_type = @service_types.find_by(id: appointment.service) %>
    <div class="col-xs-2"><%= if (service_type) then service_type.name; end  %> </div>
    <div class="col-xs-2"><%= displayDateNoYear(appointment.start_time) %> </div>
    <div class="col-xs-2"><%= appointment.calendar %></div>
    <div class="col-xs-2"><%= appointment.description %> </div>
    <div class="col-xs-4"><%= link_to '<span class="label label-success">More</span>'.html_safe,appointment %> <%= link_to '<span class="label label-warning">Edit</span>'.html_safe, edit_appointment_path(appointment) %> <%= link_to '<span class="label label-danger">Delete</span>'.html_safe, appointment, method: :delete, data: { confirm: 'Are you sure? This will remove the appointment from all billing records.' } %> </div>
  </div>
<% end %>
<br>
<br>

<div class="row">
  <div class="col-xs-12" id="index-main-button">
<%= link_to '<button type="button" class="btn btn-primary">New Appointment</button>'.html_safe, new_appointment_path %>
</div>
</div>


</div>
