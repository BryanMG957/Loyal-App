<div class="white">

  <div class="alert alert-success alert-dismissible" role="alert">
    <button type="button" class="close" data-dismiss="alert" aria-label="Close"><span aria-hidden="true">&times;</span></button>
    <p id="notice" ><%= notice %></p>
  </div>

  <p>
    <strong>Name:</strong>
    <%= @client.first_name %>&nbsp;<%= @client.last_name %>
  </p>
  <% if (@client.first_name_2 != "") %>
    <p>
      <strong>Name 2:</strong>
      <%= @client.first_name_2 %>&nbsp;<%= @client.last_name_2 %>
    </p>
  <% end %>
  <p>
    <strong>Email:</strong>
    <%= @client.email %>
  </p>
  <p>
    <strong>Pets:</strong>
      <%= @client.pets.map { |pet| pet.name }.join(", ") %>
  </p>
  <p>
    <strong>Phone numbers:</strong><br />
    <%= @client.phone1 %><br />
    <% if (@client.phone2 && (@client.phone2 != "")) %>
      <%= @client.phone2 %><br />
    <% end %>
    <% if (@client.phone3 && (@client.phone3 != "")) %>
      <%= @client.phone3 %><br />
    <% end %>
    <% if (@client.phone4 && (@client.phone4 != "")) %>
      <%= @client.phone4 %><br />
    <% end %>
  </p>
  <p>
    <strong>Address:</strong>
    <%= @client.address %>
  </p>
  <p>
    <strong>Notes:</strong>
    <%= @client.notes %>
  </p>
  <p>
    <strong>Company:</strong>
    <%= @client.company %>
  </p>

  <div class="row">
    <div class="col-xs-12" id="index-main-button">
    <%= link_to '<button type="button" class="btn btn-warning">Edit</button>'.html_safe, edit_client_path(@client) %> <%= link_to '<button type="button" class="btn btn-default">Back</button>'.html_safe, clients_path %>
    </div>
  </div>
</div>
