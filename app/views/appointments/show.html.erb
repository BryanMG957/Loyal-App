<div class="row">
  <div class="col-xs-12" id="index-main-button">
<%= link_to '<button type="button" class="btn btn-warning">Back to Calendar</button>'.html_safe, calendarmain_path %>&nbsp;
<%= link_to '<button type="button" class="btn btn-default">Edit Appt</button>'.html_safe, edit_appointment_path(@appointment) %>&nbsp;
<%= link_to '<button type="button" class="btn btn-default">Appts List</button>'.html_safe, appointments_path %>
</div>
</div>


</div>
