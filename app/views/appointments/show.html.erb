<div class="white">

  <div class="alert alert-success alert-dismissible" role="alert">
    <button type="button" class="close" data-dismiss="alert" aria-label="Close"><span aria-hidden="true">&times;</span></button>
    <p id="notice" ><%= notice %></p>
  </div>

<p>
  <strong>Service Type:</strong>
  <% service_type = @service_types.find_by(id: @appointment.service) %>
  <%= if (service_type) then service_type.name end %>
</p>

<p>
  <strong>Time:</strong>
  <%= displayDate(@appointment.start_time) %> - <%= displayDate(@appointment.end_time) %>
</p>

<p>
  <strong>Charge:</strong>
  <%= @appointment.charge %>
</p>

<p>
  <strong>Reminder before:</strong>
  <%= @appointment.reminder_before %>
</p>

<p>
  <strong>Reminder after:</strong>
  <%= @appointment.reminder_after %>
</p>

<p>
  <strong>Description:</strong>
  <%= @appointment.description %>
</p>

<p>
  <strong>Status:</strong>
  <%= @appointment.status %>
</p>

<p>
  <strong>Notes:</strong>
  <%= @appointment.notes %>
</p>

<p>
  <strong>Calendar:</strong>
  <%= @appointment.calendar %>
</p>

<p>
  <strong>Client:</strong>
  <%= @appointment.client %>
</p>

<p>
  <strong>Bill:</strong>
  <%= @appointment.bill %>
</p>
<!--
<p>
  <strong>Employee:</strong>
  <%= @appointment.employee %>
</p>
