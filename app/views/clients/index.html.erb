<p id="notice"><%= notice %></p>

<div class="white">

<h1>Clients</h1>

<div class="row">
  <div class="col-xs-3"><strong>First Name</strong></div>
  <div class="col-xs-3"><strong>Last Name</strong></div>
  <div class="col-xs-3"><strong>Pets</strong></div>
  <div class="col-xs-3"><strong>Options</strong></div>
</div>

<% @clients.each do |client| %>
<div class="row">
    <div class="col-xs-3"><%= client.first_name %> </div>
    <div class="col-xs-3"><%= client.last_name %> </div>
    <div class="col-xs-3"><%= client.pets.map { |pet| pet.name }.join(", ") %> </div>
    <div class="col-xs-3"><%= link_to '<span class="glyphicon glyphicon-eye-open" aria-hidden="true"></span>'.html_safe,client %><%= link_to '  <span class="glyphicon glyphicon-pencil" aria-hidden="true"></span>'.html_safe, edit_client_path(client) %> <%= link_to '  <span class="glyphicon glyphicon-trash" aria-hidden="true"></span>'.html_safe, client, method: :delete, data: { confirm: 'Are you sure?' } %> </div>
  </div>
<% end %>
<br>
<br>

<%= link_to 'New Client', new_client_path %>

</div>
