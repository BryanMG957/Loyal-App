<div class="white">
  <p id="notice"><%= notice %></p>

  <h1>Listing Calendars</h1>

  <table>
    <thead>
      <tr>
        <th>Name</th>
        <th>Type</th>
        <th>URL</th>
        <th>Username</th>
        <th>Password</th>
        <th colspan="3"></th>
      </tr>
    </thead>

    <tbody>
      <% @calendars.each do |calendar| %>
        <tr>
          <td><%= calendar.name %></td>
          <td><%= calendar.apitype %></td>
          <td><%= calendar.url %></td>
          <td><%= calendar.username %></td>
          <td>********</td>
          <td><%= link_to 'Show', calendar %></td>
          <td><%= link_to 'Edit', edit_calendar_path(calendar) %></td>
          <td><%= link_to 'Destroy', calendar, method: :delete, data: { confirm: 'Are you sure?' } %></td>
        </tr>
      <% end %>
    </tbody>
  </table>

  <br>

  <%= link_to 'New Calendar', new_calendar_path %>
</div>